<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context=".fragment_viewer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:background="#000000">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/call"
                android:layout_width="36dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="center"
                android:layout_height="36dp"
                app:civ_border_width="0dp"
                android:src="@android:drawable/stat_sys_phone_call"
                app:civ_circle_background_color="@color/colorAccent"
                app:civ_border_color="#ffffff"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photo"
                android:layout_width="75dp"
                android:layout_gravity="center"
                android:layout_height="75dp"
                app:civ_border_color="#ffffff"
                android:src="@drawable/msn2"
                app:civ_border_width="2dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/compartir"
                android:layout_width="36dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                app:civ_border_width="0dp"
                android:src="@android:drawable/ic_menu_share"
                app:civ_circle_background_color="@color/colorAccent"
                app:civ_border_color="#ffffff"/>

        </LinearLayout>
        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:text="Editar"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#1f155b"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/clickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:text="Brendan Moore"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_gravity="center"
               android:layout_height="wrap_content">

               <TextView
                   android:id="@+id/clickapellido"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:foregroundGravity="center_vertical"
                   android:fontFamily="sans-serif"
                   android:textColor="#ffffff"
                   android:textSize="20dp"
                   android:textStyle="bold"
                   android:text="0061457"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:gravity="center"
                   android:layout_gravity="center"/>

               <TextView
                   android:id="@+id/clickid"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#ffffff"
                   android:textSize="20sp"
                   android:text="+503 2257-7777"
                   android:fontFamily="sans-serif"
                   android:gravity="center"
                   android:layout_gravity="center_horizontal"/>


           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_gravity="center"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/clickemail"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="4dp"
                   android:textColor="#ffffff"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:fontFamily="sans-serif"
                   android:textSize="20sp"
                   android:text="Casa #25 Colonia X"
                   android:gravity="center"
                   android:layout_gravity="center"/>
               <TextView
                   android:id="@+id/clickdireccion"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="4dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:fontFamily="sans-serif"
                   android:textColor="#ffffff"
                   android:textSize="20sp"
                   android:text="Casa #25 Colonia X"
                   android:gravity="center"
                   android:layout_gravity="center"/>
           </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/clicknumero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="4dp"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:text="Casa #25 Colonia X"
                    android:gravity="center"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/clickbirthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="4dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"
                    android:text="Casa #25 Colonia X"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>



        </LinearLayout>












    </LinearLayout>
</LinearLayout>